{
  "manifest_version": 2,
  "name": "Pixel Artify",
  "version": "1.0",
  "description": "Transforme imagens em pixel art com um clique.",
  "icons": {
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
